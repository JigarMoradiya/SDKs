<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relAbacus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_padding16"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivReset"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignEnd="@+id/rlAbacusMain"
                android:layout_marginEnd="@dimen/_30sdp"
                app:srcCompat="@drawable/box_primory_accent" />

            <RelativeLayout
                android:id="@+id/rlAbacusMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/abacus_full_new"
                android:gravity="right"
                android:paddingStart="@dimen/seventeen"
                android:paddingTop="@dimen/_14sdp"
                android:paddingEnd="@dimen/seventeen"
                android:paddingBottom="@dimen/_14sdp">

                <RelativeLayout
                    android:id="@+id/rlAbacus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/zero">

                    <FrameLayout
                        android:id="@+id/flAbacusTop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/six"
                        android:paddingEnd="@dimen/six">

                        <com.jigar.me.ui.view.base.abacus.AbacusMasterView
                            android:id="@+id/abacusTop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:beadDrawables="@array/bead_top"
                            app:columnSpacing="@dimen/_24sdp"
                            app:isBeadStackFromBottom="false"
                            app:noOfBead="1"
                            app:roadDrawable="@drawable/road_blue"
                            app:singleBeadValue="5" />

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/flAbacusBottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rlDivider"
                        android:paddingStart="@dimen/six"
                        android:paddingEnd="@dimen/six">

                        <com.jigar.me.ui.view.base.abacus.AbacusMasterView
                            android:id="@+id/abacusBottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:beadDrawables="@array/big_bottom"
                            app:columnSpacing="@dimen/_24sdp"
                            app:isBeadStackFromBottom="true"
                            app:noOfBead="4"
                            app:roadDrawable="@drawable/road_blue"
                            app:singleBeadValue="1" />

                    </FrameLayout>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivRight"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/sixteen"
                        android:layout_below="@+id/flAbacusTop"
                        android:layout_marginStart="@dimen/minus_two"
                        android:layout_marginTop="@dimen/minus_twofive"
                        android:layout_toEndOf="@+id/rlDivider"
                        app:srcCompat="@drawable/road_dot" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/sixteen"
                        android:layout_below="@+id/flAbacusTop"
                        android:layout_marginStart="@dimen/zero"
                        android:layout_marginTop="@dimen/minus_twofive"
                        app:srcCompat="@drawable/road_dot" />


                    <RelativeLayout
                        android:id="@+id/rlDivider"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/flAbacusTop"
                        android:layout_alignStart="@+id/flAbacusTop"
                        android:layout_alignLeft="@+id/flAbacusTop"
                        android:layout_alignEnd="@+id/flAbacusTop"
                        android:layout_alignRight="@+id/flAbacusTop"
                        android:layout_marginStart="@dimen/twopointfive">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivDivider"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/eight" />

                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvCurrentVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/rlAbacusMain"
                android:layout_alignTop="@+id/rlAbacusMain"
                android:layout_alignEnd="@+id/rlAbacusMain"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                app:fontFamily="@font/font_bold" />

        </RelativeLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/cardMain"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/_2sdp"
            android:background="@drawable/bg_right_curved_30"
            android:backgroundTint="@color/white"
            android:elevation="@dimen/activity_padding8"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearExerciseAddSub"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible"
                android:paddingTop="@dimen/activity_padding12">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtQueLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Q1"
                    android:layout_marginStart="@dimen/activity_padding12"
                    app:fontFamily="@font/font_medium"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSizeExtraLarge"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/txtNext"
                    style="@style/btnExtraSmall"
                    android:layout_marginBottom="@dimen/activity_padding8"
                    android:layout_marginStart="@dimen/activity_padding12"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="@dimen/_40sdp"
                    android:text="@string/next"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerviewExercise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:itemCount="10"
                    android:layout_marginEnd="@dimen/activity_padding12"
                    tools:listitem="@layout/row_exercise_question_layout" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvAnswerLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_regular"
                    android:includeFontPadding="false"
                    android:text="@string/answer"
                    android:layout_marginEnd="@dimen/activity_padding8"
                    app:layout_constraintTop_toTopOf="@+id/tvAnswer"
                    app:layout_constraintEnd_toStartOf="@+id/tvAnswer"
                    app:layout_constraintBottom_toBottomOf="@+id/tvAnswer"
                    android:textColor="@color/colorHeadingBlack_00"
                    android:textSize="@dimen/textSizeMedium"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_extra_bold"
                    android:includeFontPadding="false"
                    tools:text="456"
                    android:layout_marginEnd="@dimen/activity_padding8"
                    app:layout_constraintStart_toStartOf="@+id/recyclerviewExercise"
                    app:layout_constraintTop_toTopOf="@+id/txtNext"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/txtNext"
                    android:textColor="@color/colorHeadingBlack_00"
                    android:textSize="@dimen/textSize16"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linearLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible"
                tools:visibility="gone">

                <com.jigar.me.utils.widget.viewpager.WrappingViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    android:visibility="visible" />

                <ru.tinkoff.scrollingpagerindicator.ScrollingPagerIndicator
                    android:id="@+id/indicatorPager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_padding8"
                    app:spi_dotSelectedColor="@color/colorPrimary"
                    app:spi_looped="true" />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>