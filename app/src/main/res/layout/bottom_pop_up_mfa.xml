<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_top_curved_24_dp"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingTop="15dp"
    android:paddingEnd="15dp"
    android:paddingBottom="30dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/lato_bold"
        android:textColor="#bab2ae"
        android:textSize="16sp"
        android:textStyle="normal"
        android:text="Close" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_login" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/lato_bold"
        android:gravity="center_horizontal"
        android:letterSpacing="0.01"
        android:textColor="#202a60"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Already logged in." />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/lato_medium"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="7sp"
        android:textAlignment="center"
        android:textColor="#707f88"
        android:textSize="15sp"
        android:textStyle="normal"
        android:text="Select any of the device below to logout" />

    <include
        android:id="@+id/layout_one"
        layout="@layout/rv_mfa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp" />

    <include
        android:id="@+id/layout_two"
        layout="@layout/rv_mfa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />


</androidx.appcompat.widget.LinearLayoutCompat>
