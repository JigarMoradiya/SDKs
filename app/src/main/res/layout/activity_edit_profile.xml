<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="dataModel"
            type="com.example.iiifa_fan_android.data.models.FanUser" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ibBack"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ibBack"
            android:layout_alignBottom="@+id/ibBack"
            android:layout_centerInParent="true"
            android:fontFamily="@font/lato_medium"
            android:gravity="center"
            android:text="@string/menu_edit_profile"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="normal" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSave"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_alignTop="@+id/ibBack"
            android:layout_alignBottom="@+id/ibBack"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:text="@string/save"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:textStyle="normal" />


        <include
            android:id="@+id/placeholder"
            layout="@layout/placeholder_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ibBack"
            android:visibility="gone"
            tools:visibility="visible" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ibBack"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="32dp">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_default_user"
                    app:civ_border_width="0dp"
                    app:imgUrlCircular="@{dataModel.profile_url}"
                    app:placeHolder="@{@drawable/ic_default_user}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/iv_edit_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorAccent"
                    android:contentDescription="@string/menu_edit_profile"
                    android:src="@drawable/ic_edit"
                    android:tint="@color/black"
                    app:borderWidth="0dp"
                    app:fabCustomSize="36dp"
                    app:fabSize="auto"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_profile"
                    app:layout_constraintEnd_toEndOf="@+id/iv_profile"
                    app:maxImageSize="22dp"
                    app:rippleColor="@color/white" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtFName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="6dp"
                    android:fontFamily="@font/lato_regular"
                    android:lineSpacingExtra="7sp"
                    android:text="@string/first_name"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toStartOf="@+id/txtLFName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_edit_profile" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtLFName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/lato_regular"
                    android:lineSpacingExtra="7sp"
                    android:text="@string/last_name"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txtFName"
                    app:layout_constraintTop_toTopOf="@+id/txtFName" />

                <com.example.iiifa_fan_android.utils.NoChangingBackgroundTextInputLayout
                    android:id="@+id/text_input_layout_first_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="6dp"
                    app:errorTextColor="@color/edit_text_color"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toStartOf="@+id/text_input_layout_last_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtFName">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edittext"
                        android:fontFamily="@font/lato_regular"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:padding="15dp"
                        android:singleLine="true"
                        android:text="@{dataModel.first_name}"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </com.example.iiifa_fan_android.utils.NoChangingBackgroundTextInputLayout>

                <com.example.iiifa_fan_android.utils.NoChangingBackgroundTextInputLayout
                    android:id="@+id/text_input_layout_last_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="8dp"
                    app:errorTextColor="@color/edit_text_color"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/text_input_layout_first_name"
                    app:layout_constraintTop_toBottomOf="@+id/txtFName">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edittext"
                        android:fontFamily="@font/lato_medium"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:text="@{dataModel.last_name}"
                        android:padding="15dp"
                        android:singleLine="true"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </com.example.iiifa_fan_android.utils.NoChangingBackgroundTextInputLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/lato_regular"
                    android:lineSpacingExtra="7sp"
                    android:text="@string/email_id"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_input_layout_last_name" />

                <com.example.iiifa_fan_android.utils.NoChangingBackgroundTextInputLayout
                    android:id="@+id/text_input_layout_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:errorTextColor="@color/edit_text_color"
                    app:hintEnabled="false"
                    app:layout_constraintTop_toBottomOf="@+id/txtEmail">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints="emailAddress"
                        android:background="@drawable/bg_edittext"
                        android:fontFamily="@font/lato_regular"
                        android:maxLines="1"
                        android:padding="15dp"
                        android:text="@{dataModel.email}"
                        android:singleLine="true"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="16sp" />
                </com.example.iiifa_fan_android.utils.NoChangingBackgroundTextInputLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/lato_regular"
                    android:lineSpacingExtra="7sp"
                    android:text="@string/age"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_input_layout_email" />

                <com.example.iiifa_fan_android.utils.NoChangingBackgroundTextInputLayout
                    android:id="@+id/text_input_layout_age"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:errorTextColor="@color/edit_text_color"
                    app:hintEnabled="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtAge">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edittext"
                        android:digits="0123456789"
                        android:fontFamily="@font/lato_medium"
                        android:inputType="numberDecimal"
                        android:maxLength="2"
                        android:maxLines="1"
                        android:padding="15dp"
                        android:text="@{dataModel.age+``}"
                        android:singleLine="true"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textColorHint="@color/text_color"
                        android:textSize="16sp" />

                </com.example.iiifa_fan_android.utils.NoChangingBackgroundTextInputLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/lato_regular"
                    android:lineSpacingExtra="7sp"
                    android:text="@string/gender"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toEndOf="@+id/text_input_layout_age"
                    app:layout_constraintTop_toBottomOf="@+id/text_input_layout_email" />

                <com.example.iiifa_fan_android.utils.NoChangingBackgroundTextInputLayout
                    android:id="@+id/text_input_layout_Gender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:errorTextColor="@color/edit_text_color"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/txtGender"
                    app:layout_constraintTop_toBottomOf="@+id/txtGender">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/spinner_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edittext"
                        android:clickable="false"
                        android:drawableEnd="@drawable/ic_arrow_down"
                        android:drawableTint="@color/white"
                        android:focusable="false"
                        android:text="@{dataModel.getGenders()}"
                        android:fontFamily="@font/lato_medium"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:padding="15dp"
                        android:singleLine="true"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </com.example.iiifa_fan_android.utils.NoChangingBackgroundTextInputLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtPhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/lato_regular"
                    android:lineSpacingExtra="7sp"
                    android:text="@string/mobile_number"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_input_layout_age" />

                <com.rilixtech.widget.countrycodepicker.CountryCodePicker
                    android:id="@+id/ccp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_edittext"
                    android:padding="15dp"
                    app:countryCode="@{dataModel.phone_number}"
                    app:ccp_defaultNameCode="IN"
                    app:ccp_enableHint="false"
                    app:ccp_enablePhoneAutoFormatter="true"
                    app:ccp_hideNameCode="true"
                    app:ccp_showFlag="false"
                    app:ccp_textColor="@color/white"
                    app:ccp_textFont="lato_medium.ttf"
                    app:ccp_textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtPhoneNumber" />


                <com.example.iiifa_fan_android.utils.NoChangingBackgroundTextInputLayout
                    android:id="@+id/text_input_layout_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:gravity="bottom"
                    app:errorTextColor="@color/edit_text_color"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ccp"
                    app:layout_constraintTop_toBottomOf="@+id/txtPhoneNumber">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edittext"
                        android:fontFamily="@font/lato_medium"
                        android:gravity="start"
                        android:inputType="phone"
                        android:maxLines="1"
                        app:phoneNumber="@{dataModel.phone_number}"
                        android:padding="15dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/text_color"
                        android:textSize="16sp" />
                </com.example.iiifa_fan_android.utils.NoChangingBackgroundTextInputLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</layout>