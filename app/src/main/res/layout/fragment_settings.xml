<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.jigar.me.utils.AppConstants" />

        <variable
            name="isStepByStep"
            type="Boolean" />

        <variable
            name="isDisplayHelpMessage"
            type="Boolean" />

        <variable
            name="isDisplayAbacusNumber"
            type="Boolean" />

        <variable
            name="isHideTable"
            type="Boolean" />

        <variable
            name="isLeftHand"
            type="Boolean" />

        <variable
            name="isAbacusSound"
            type="Boolean" />

        <variable
            name="isNumberPuzzleSound"
            type="Boolean" />

        <variable
            name="isHintSound"
            type="Boolean" />

        <variable
            name="isPurchased"
            type="Boolean" />

        <variable
            name="isAutoReset"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/light_back"
            app:cardCornerRadius="@dimen/_16sdp"
            app:cardElevation="@dimen/card_elevation"
            app:cardMaxElevation="@dimen/card_elevation"
            android:layout_margin="@dimen/icons_margin2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgBack"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:padding="@dimen/activity_padding8"
                app:srcCompat="@drawable/ic_back" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPurchase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_1sdp"
            app:cardBackgroundColor="@color/light_purchase"
            app:cardCornerRadius="@dimen/_16sdp"
            app:cardElevation="@dimen/card_elevation"
            app:cardMaxElevation="@dimen/card_elevation"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:padding="@dimen/activity_padding8"
                app:srcCompat="@drawable/ic_purchase" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtTitle"
            style="@style/mainTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/title_margin"
            android:text="@string/txt_setting_title"
            app:layout_constraintBottom_toBottomOf="@+id/cardBack"
            app:layout_constraintStart_toEndOf="@+id/cardBack"
            app:layout_constraintTop_toTopOf="@+id/cardBack" />


        <androidx.core.widget.NestedScrollView
            android:id="@+id/scollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardBack">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/activity_padding4">


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardFreeTheme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_padding4"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/activity_padding8"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardMaxElevation="@dimen/card_elevation"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintEnd_toStartOf="@+id/linearAbacusPreview"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/purple_700"
                    app:strokeWidth="1dp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/activity_padding8"
                            android:text="@string/free_abacus_theme"
                            android:textColor="@color/purple_700"
                            android:textSize="@dimen/textSizeRegular"
                            app:fontFamily="@font/font_bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:background="@color/purple_700" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerviewAbacusDefault"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/activity_padding8"
                            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                            app:spanCount="4"
                            tools:itemCount="5"
                            tools:listitem="@layout/row_default_theme">

                        </androidx.recyclerview.widget.RecyclerView>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardPaidTheme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_padding4"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/activity_padding8"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardMaxElevation="@dimen/card_elevation"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintEnd_toStartOf="@+id/linearAbacusPreview"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardFreeTheme"
                    app:strokeColor="@color/indigo_700"
                    app:strokeWidth="1dp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/activity_padding8"
                            android:text="@string/paid_abacus_themes"
                            android:textColor="@color/indigo_700"
                            android:textSize="@dimen/textSizeRegular"
                            app:fontFamily="@font/font_bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.2dp"
                            android:background="@color/indigo_700" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerviewAbacusPaid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/activity_padding8"
                            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                            app:spanCount="4"
                            tools:itemCount="5"
                            tools:listitem="@layout/row_default_theme">

                        </androidx.recyclerview.widget.RecyclerView>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </com.google.android.material.card.MaterialCardView>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/linearAbacusPreview"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/activity_padding6"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="@+id/cardPaidTheme"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/cardFreeTheme">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/linearAbacus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txtPreview"
                        style="@style/mainTitleSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_padding4"
                        android:gravity="center"
                        android:text="@string/preview_of_theme"
                        android:textSize="@dimen/textSizeExtraSmall" />
                </androidx.appcompat.widget.LinearLayoutCompat>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/cardPaidTheme">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/activity_padding4"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/card_corner_radius"
                            app:cardElevation="@dimen/card_elevation"
                            app:cardMaxElevation="@dimen/card_elevation"
                            app:cardUseCompatPadding="true"
                            app:strokeColor="@color/grey_700"
                            app:strokeWidth="1dp">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:id="@+id/relHintSound"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_32sdp"
                                    android:paddingStart="@dimen/activity_padding8"
                                    android:paddingEnd="@dimen/activity_padding8">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/img_hint_sound"
                                        android:layout_width="@dimen/_16sdp"
                                        android:layout_height="@dimen/_16sdp"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerVertical="true"
                                        app:srcCompat="@drawable/ic_hint_sound"
                                        app:tint="@color/colorListingHeading" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/txtHintSound"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="@dimen/activity_padding8"
                                        android:layout_toEndOf="@+id/img_hint_sound"
                                        android:fontFamily="@font/font_bold"
                                        android:text="@string/txt_setting_hintsound"
                                        android:gravity="center_vertical|left"
                                        android:textColor="@color/colorListingHeading"
                                        android:textSize="@dimen/textSizeMedium"
                                        android:textStyle="normal" />

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/imgHintpaid"
                                        android:layout_width="@dimen/_24sdp"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="@dimen/activity_padding8"
                                        android:layout_toEndOf="@+id/txtHintSound"
                                        android:visibility="@{isPurchased?View.GONE:View.VISIBLE}"
                                        app:srcCompat="@mipmap/paid_tag" />

                                    <androidx.appcompat.widget.SwitchCompat
                                        android:id="@+id/sw_hint_sound"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:checked="@{isHintSound}"
                                        android:theme="@style/SCBSwitch"
                                        tools:ignore="MissingPrefix" />

                                </RelativeLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.2dp"
                                    android:background="@color/gray_dark70" />

                                <RelativeLayout
                                    android:id="@+id/relAbacusSound"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_32sdp"
                                    android:paddingStart="@dimen/activity_padding8"
                                    android:paddingEnd="@dimen/activity_padding8">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/img_sound"
                                        android:layout_width="@dimen/_16sdp"
                                        android:layout_height="@dimen/_16sdp"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerVertical="true"
                                        app:srcCompat="@drawable/ic_setting_sound"
                                        app:tint="@color/colorListingHeading" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="@dimen/activity_padding8"
                                        android:layout_toStartOf="@+id/sw_sound"
                                        android:layout_toEndOf="@+id/img_sound"
                                        android:fontFamily="@font/font_semibold"
                                        android:gravity="center_vertical|left"
                                        android:text="@string/txt_setting_sound"
                                        android:textColor="@color/colorListingHeading"
                                        android:textSize="@dimen/textSizeMedium"
                                        android:textStyle="normal" />

                                    <androidx.appcompat.widget.SwitchCompat
                                        android:id="@+id/sw_sound"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:checked="@{isAbacusSound}"
                                        android:theme="@style/SCBSwitch"
                                        tools:ignore="MissingPrefix" />

                                </RelativeLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.2dp"
                                    android:background="@color/gray_dark70" />

                                <RelativeLayout
                                    android:id="@+id/relAutoReset"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_32sdp"
                                    android:paddingStart="@dimen/activity_padding8"
                                    android:paddingEnd="@dimen/activity_padding8">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/imgAutoReset"
                                        android:layout_width="@dimen/_16sdp"
                                        android:layout_height="@dimen/_16sdp"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerVertical="true"
                                        app:srcCompat="@drawable/ic_setting_autoreset"
                                        app:tint="@color/colorListingHeading" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="@dimen/activity_padding8"
                                        android:layout_toStartOf="@+id/swAutoReset"
                                        android:layout_toEndOf="@+id/imgAutoReset"
                                        android:fontFamily="@font/font_semibold"
                                        android:gravity="center_vertical|left"
                                        android:text="@string/auto_reset"
                                        android:textColor="@color/colorListingHeading"
                                        android:textSize="@dimen/textSizeMedium"
                                        android:textStyle="normal" />

                                    <androidx.appcompat.widget.SwitchCompat
                                        android:id="@+id/swAutoReset"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:checked="@{isAutoReset}"
                                        android:theme="@style/SCBSwitch"
                                        tools:ignore="MissingPrefix" />

                                </RelativeLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.2dp"
                                    android:background="@color/gray_dark70" />

                                <RelativeLayout
                                    android:id="@+id/relNumberPuzzleSound"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_32sdp"
                                    android:paddingStart="@dimen/activity_padding8"
                                    android:paddingEnd="@dimen/activity_padding8">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/img_NumberPuzzleSound"
                                        android:layout_width="@dimen/_16sdp"
                                        android:layout_height="@dimen/_16sdp"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerVertical="true"
                                        app:srcCompat="@drawable/ic_volume_on"
                                        app:tint="@color/colorListingHeading" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="@dimen/activity_padding8"
                                        android:layout_toStartOf="@+id/sw_NumberPuzzleSound"
                                        android:layout_toEndOf="@+id/img_NumberPuzzleSound"
                                        android:fontFamily="@font/font_semibold"
                                        android:text="@string/number_sequences_puzzle_volume"
                                        android:gravity="center_vertical|left"
                                        android:textColor="@color/colorListingHeading"
                                        android:textSize="@dimen/textSizeMedium"
                                        android:textStyle="normal" />

                                    <androidx.appcompat.widget.SwitchCompat
                                        android:id="@+id/sw_NumberPuzzleSound"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:checked="@{isNumberPuzzleSound}"
                                        android:theme="@style/SCBSwitch"
                                        tools:ignore="MissingPrefix" />

                                </RelativeLayout>


                            </androidx.appcompat.widget.LinearLayoutCompat>

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/activity_padding4"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/card_corner_radius"
                            app:cardElevation="@dimen/card_elevation"
                            app:cardMaxElevation="@dimen/card_elevation"
                            app:cardUseCompatPadding="true"
                            app:strokeColor="@color/grey_700"
                            app:strokeWidth="1dp">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:id="@+id/relDisplayAbacusNumber"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_32sdp"
                                    android:paddingStart="@dimen/activity_padding8"
                                    android:paddingEnd="@dimen/activity_padding8">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/img_display_abacus_number"
                                        android:layout_width="@dimen/_16sdp"
                                        android:layout_height="@dimen/_16sdp"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerVertical="true"
                                        app:srcCompat="@drawable/ic_setting_display_abacus_number"
                                        app:tint="@color/colorListingHeading" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="@dimen/activity_padding8"
                                        android:layout_toStartOf="@+id/sw_display_abacus_number"
                                        android:layout_toEndOf="@+id/img_display_abacus_number"
                                        android:fontFamily="@font/font_semibold"
                                        android:gravity="center_vertical|left"
                                        android:text="@string/txt_setting_display_abacus_number"
                                        android:textColor="@color/colorListingHeading"
                                        android:textSize="@dimen/textSizeMedium"
                                        android:textStyle="normal" />

                                    <androidx.appcompat.widget.SwitchCompat
                                        android:id="@+id/sw_display_abacus_number"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:checked="@{isDisplayAbacusNumber}"
                                        android:theme="@style/SCBSwitch" />

                                </RelativeLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.2dp"
                                    android:background="@color/gray_dark70" />

                                <RelativeLayout
                                    android:id="@+id/relDisplayHelpMessage"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_32sdp"
                                    android:paddingStart="@dimen/activity_padding8"
                                    android:paddingEnd="@dimen/activity_padding8">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/img_display_help_message"
                                        android:layout_width="@dimen/_16sdp"
                                        android:layout_height="@dimen/_16sdp"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerVertical="true"
                                        app:srcCompat="@drawable/ic_setting_display_help_message"
                                        app:tint="@color/colorListingHeading" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/activity_padding8"
                                        android:layout_toStartOf="@+id/sw_display_help_message"
                                        android:layout_toEndOf="@+id/img_display_help_message"
                                        android:layout_centerVertical="true"
                                        android:fontFamily="@font/font_semibold"
                                        android:gravity="center_vertical|left"
                                        android:text="@string/txt_setting_display_help_message"
                                        android:textColor="@color/colorListingHeading"
                                        android:textSize="@dimen/textSizeMedium"
                                        android:textStyle="normal" />

                                    <androidx.appcompat.widget.SwitchCompat
                                        android:id="@+id/sw_display_help_message"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:checked="@{isDisplayHelpMessage}"
                                        android:theme="@style/SCBSwitch" />

                                </RelativeLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.2dp"
                                    android:background="@color/gray_dark70" />

                                <RelativeLayout
                                    android:id="@+id/relHideTable"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_32sdp"
                                    android:paddingStart="@dimen/activity_padding8"
                                    android:paddingEnd="@dimen/activity_padding8">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/img_hide_table"
                                        android:layout_width="@dimen/_16sdp"
                                        android:layout_height="@dimen/_16sdp"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerVertical="true"
                                        app:srcCompat="@drawable/ic_hide_table"
                                        app:tint="@color/colorListingHeading" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="@dimen/activity_padding8"
                                        android:layout_toStartOf="@+id/sw_hide_table"
                                        android:layout_toEndOf="@+id/img_hide_table"
                                        android:fontFamily="@font/font_semibold"
                                        android:gravity="center_vertical|left"
                                        android:text="@string/txt_setting_hide_table"
                                        android:textColor="@color/colorListingHeading"
                                        android:textSize="@dimen/textSizeMedium"
                                        android:textStyle="normal" />

                                    <androidx.appcompat.widget.SwitchCompat
                                        android:id="@+id/sw_hide_table"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:checked="@{isHideTable}"
                                        android:theme="@style/SCBSwitch" />

                                </RelativeLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.2dp"
                                    android:background="@color/gray_dark70" />

                                <RelativeLayout
                                    android:id="@+id/relLeftHand"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_32sdp"
                                    android:paddingStart="@dimen/activity_padding8"
                                    android:paddingEnd="@dimen/activity_padding8">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/img_left_hand"
                                        android:layout_width="@dimen/_16sdp"
                                        android:layout_height="@dimen/_16sdp"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerVertical="true"
                                        app:srcCompat="@drawable/ic_setting_leftt_hand"
                                        app:tint="@color/colorListingHeading" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="@dimen/activity_padding8"
                                        android:layout_toStartOf="@+id/sw_left_hand"
                                        android:layout_toEndOf="@+id/img_left_hand"
                                        android:fontFamily="@font/font_semibold"
                                        android:gravity="center_vertical|left"
                                        android:text="@string/txt_setting_left_hand"
                                        android:textColor="@color/colorListingHeading"
                                        android:textSize="@dimen/textSizeMedium"
                                        android:textStyle="normal" />

                                    <androidx.appcompat.widget.SwitchCompat
                                        android:id="@+id/sw_left_hand"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:checked="@{isLeftHand}"
                                        android:theme="@style/SCBSwitch" />

                                </RelativeLayout>
                            </androidx.appcompat.widget.LinearLayoutCompat>


                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_padding4"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/card_corner_radius"
                        app:cardElevation="@dimen/card_elevation"
                        app:cardMaxElevation="@dimen/card_elevation"
                        app:cardUseCompatPadding="true"
                        app:strokeColor="@color/grey_700"
                        app:strokeWidth="1dp">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/relAnswerStep"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_32sdp"
                                android:paddingStart="@dimen/activity_padding8"
                                android:paddingEnd="@dimen/activity_padding8">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/img_step"
                                    android:layout_width="@dimen/_16sdp"
                                    android:layout_height="@dimen/_16sdp"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    app:srcCompat="@drawable/ic_setting_step"
                                    app:tint="@color/colorListingHeading" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txt_step_tick"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/activity_padding8"
                                    android:layout_toStartOf="@+id/img_step_tick"
                                    android:layout_toEndOf="@+id/img_step"
                                    android:fontFamily="@font/font_semibold"
                                    android:gravity="center_vertical|left"
                                    android:text="@string/txt_setting_step_by_step"
                                    android:textColor="@color/colorListingHeading"
                                    android:textSize="@dimen/textSizeMedium"
                                    android:textStyle="normal" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/img_step_tick"
                                    android:layout_width="@dimen/_16sdp"
                                    android:layout_height="@dimen/_16sdp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:visibility="@{isStepByStep?View.VISIBLE:View.INVISIBLE}"
                                    app:srcCompat="@drawable/ic_setting_done" />


                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.2dp"
                                android:background="@color/gray_dark70" />

                            <RelativeLayout
                                android:id="@+id/relAnswerFinal"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_32sdp"
                                android:paddingStart="@dimen/activity_padding8"
                                android:paddingEnd="@dimen/activity_padding8">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/img_final"
                                    android:layout_width="@dimen/_16sdp"
                                    android:layout_height="@dimen/_16sdp"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    app:srcCompat="@drawable/ic_setting_final"
                                    app:tint="@color/colorListingHeading" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txt_final_tick"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/activity_padding8"
                                    android:layout_toStartOf="@+id/img_final_tick"
                                    android:layout_toEndOf="@+id/img_final"
                                    android:fontFamily="@font/font_semibold"
                                    android:gravity="center_vertical|left"
                                    android:text="@string/txt_setting_final_answer"
                                    android:textColor="@color/colorListingHeading"
                                    android:textSize="@dimen/textSizeMedium"
                                    android:textStyle="normal" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/img_final_tick"
                                    android:layout_width="@dimen/_16sdp"
                                    android:layout_height="@dimen/_16sdp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:visibility="@{isStepByStep?View.INVISIBLE:View.VISIBLE}"
                                    app:srcCompat="@drawable/ic_setting_done" />


                            </RelativeLayout>

                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </com.google.android.material.card.MaterialCardView>


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>