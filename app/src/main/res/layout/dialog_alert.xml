<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="@dimen/_2sdp"
        app:cardCornerRadius="@dimen/activity_padding12"
        app:cardElevation="@dimen/card_elevation"
        app:cardMaxElevation="@dimen/card_elevation"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtTitle"
                android:textColor="@color/textColor1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_bold"
                android:gravity="center_vertical"
                android:padding="@dimen/activity_padding12"
                android:textSize="@dimen/textSizeExtraLarge"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/viewDivider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/gray_dark50"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtTitle" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtQue"
                android:textColor="@color/colorHeadingBlack_00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:alpha="0.85"
                android:fontFamily="@font/font_medium"
                android:gravity="center_vertical"
                android:lineSpacingMultiplier="1.2"
                android:paddingStart="@dimen/activity_padding12"
                android:paddingTop="@dimen/_8sdp"
                android:paddingEnd="@dimen/activity_padding12"
                android:paddingBottom="@dimen/_8sdp"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewDivider" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtSubtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:fontFamily="@font/font_regular"
                android:paddingStart="@dimen/activity_padding12"
                android:paddingEnd="@dimen/activity_padding12"
                android:paddingBottom="@dimen/_8sdp"
                android:textColor="@color/colorHeadingBlack_00"
                android:textSize="@dimen/_14sdp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtQue" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/btnNo"
                android:textColor="@color/textColor0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_padding8"
                android:layout_marginEnd="@dimen/activity_padding4"
                android:alpha="0.4"
                android:background="?attr/selectableItemBackground"
                android:fontFamily="@font/font_semibold"
                android:padding="@dimen/activity_padding8"
                android:text="@string/txtCancel"
                android:textSize="@dimen/textSizeLarge"
                app:layout_constraintEnd_toStartOf="@+id/btnYes"
                app:layout_constraintTop_toBottomOf="@+id/txtSubtitle" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/btnYes"
                android:textColor="@color/textColor0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_padding4"
                android:layout_marginTop="@dimen/activity_padding8"
                android:layout_marginEnd="@dimen/activity_padding4"
                android:background="?attr/selectableItemBackground"
                android:fontFamily="@font/font_semibold"
                android:padding="@dimen/activity_padding8"
                android:text="@string/txtOk"
                android:textSize="@dimen/textSizeLarge"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtSubtitle" />


            <androidx.legacy.widget.Space
                android:layout_width="0dp"
                android:layout_height="@dimen/activity_padding8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnYes" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>