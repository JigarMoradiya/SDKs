<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="dataModel"
            type="com.example.iiifa_fan_android.data.models.dataprovider.SideMenu" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:paddingVertical="6dp"
            android:fontFamily="@font/lato_regular"
            android:includeFontPadding="false"
            android:text="@{dataModel.menuTitle}"
            android:textColor="@color/white"
            android:alpha="0.7"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/txtBadgeCount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/menu_about_iifa_connect" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtBadgeCount"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/circle_yellow"
            android:backgroundTint="@color/colorAccent"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:text="@{dataModel.badgeCount+``}"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="@{(dataModel.badgeCount>0?View.VISIBLE:View.GONE)}"
            app:layout_constraintEnd_toStartOf="@+id/imgArrow"
            app:layout_constraintBottom_toBottomOf="@+id/txtTitle"
            tools:text="9" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/txtBadgeCount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtBadgeCount"
            app:srcCompat="@drawable/ic_right_arrow"
            app:tint="@color/white"
            android:visibility="invisible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>