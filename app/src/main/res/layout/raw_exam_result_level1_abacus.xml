<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_padding6"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation4">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_padding12">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/relAbacus"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@+id/linearAnswer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <include layout="@layout/layout_abacus_exam"
                    android:id="@+id/layoutAbacus1"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgSign1"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/activity_padding16"
                    android:tint="@color/red"
                    android:visibility="gone"
                    app:srcCompat="@drawable/cal_plus"
                    tools:visibility="visible" />

                <include layout="@layout/layout_abacus_exam"
                    android:id="@+id/layoutAbacus2"/>

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linearAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_bold"
                    android:gravity="center"
                    android:text="Answer : "
                    android:layout_marginTop="@dimen/activity_padding6"
                    android:textColor="@color/colorGreen"
                    android:textSize="@dimen/textSizeExtraSmall" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtYourAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_bold"
                    android:gravity="center"
                    android:text="Your Answer : "
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textColor="@color/red"
                    android:textSize="@dimen/textSizeExtraSmall" />

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>