<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_top_curved_24_dp"
    android:backgroundTint="@color/white"
    android:overScrollMode="never"
    android:elevation="8dp"
    android:scrollbars="none"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/activity_padding16">

        <View
            android:id="@+id/viewLine"
            android:layout_width="64dp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_padding16"
            android:background="@drawable/bg_all_curved_20_tab"
            android:backgroundTint="@color/handle_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_padding16"
            style="@style/mainTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewLine"
            android:text="@string/other_app_s_by_brainapptech_team" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearOtherApps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_padding6"
            android:layout_marginTop="@dimen/activity_padding10"
            android:orientation="horizontal"
            android:weightSum="100"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle">

            <View
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="16.5" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerviewOtherApps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="67"
                android:orientation="vertical"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2"
                tools:itemCount="2"
                tools:listitem="@layout/raw_home_menu" />

            <View
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="16.5" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/font_bold"
            android:includeFontPadding="false"
            android:padding="@dimen/activity_padding8"
            android:text="@string/no_i_don_t_want"
            android:textColor="@color/colorListingHeading"
            android:textSize="@dimen/textSizeMedium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearOtherApps" />

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNo"
            android:layout_height="@dimen/_5sdp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>