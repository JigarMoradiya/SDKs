<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ibBack"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_arrow_back" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ibBack"
        android:layout_alignBottom="@+id/ibBack"
        android:layout_centerInParent="true"
        android:fontFamily="@font/lato_medium"
        android:gravity="center"
        android:text="@string/menu_change_password"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="normal" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ibBack"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="32dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtCpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/lato_regular"
                android:lineSpacingExtra="7sp"
                android:text="@string/current_password"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.example.iiifa_fan_android.utils.NoChangingBackgroundTextInputLayout
                android:id="@+id/text_input_layout_cpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:errorTextColor="@color/edit_text_color"
                app:hintEnabled="false"
                app:layout_constraintTop_toBottomOf="@+id/txtCpassword"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/white">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_cpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext"
                    android:drawablePadding="20dp"
                    android:fontFamily="@font/lato_medium"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_color"
                    android:textSize="16sp" />

            </com.example.iiifa_fan_android.utils.NoChangingBackgroundTextInputLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lato_regular"
                android:lineSpacingExtra="7sp"
                android:text="@string/new_password"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@+id/text_input_layout_cpassword"/>

            <com.example.iiifa_fan_android.utils.NoChangingBackgroundTextInputLayout
                android:id="@+id/text_input_layout_newpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:errorTextColor="@color/edit_text_color"
                app:hintEnabled="false"
                app:layout_constraintTop_toBottomOf="@+id/txtNewPassword"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/white">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_newpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext"
                    android:drawablePadding="20dp"
                    android:fontFamily="@font/lato_medium"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_color"
                    android:textSize="16sp" />

            </com.example.iiifa_fan_android.utils.NoChangingBackgroundTextInputLayout>

            <SeekBar
                android:id="@+id/seekbarPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressBackgroundTint="@color/colorAccent"
                android:progressTint="@color/colorAccent"
                android:scaleY="1"
                android:visibility="gone"
                android:splitTrack="false"
                android:thumbTint="@android:color/transparent"
                app:layout_constraintTop_toBottomOf="@+id/text_input_layout_newpassword" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_password_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/lato_regular"
                android:gravity="end"
                android:lineSpacingExtra="24sp"
                android:textColor="@color/password_moderated"
                android:textSize="14sp"
                android:textStyle="normal"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/seekbarPassword"
                tools:text="Moderate" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/tv_password_type"
                tools:listitem="@layout/rv_password_meter" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_hint_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/lato_regular"
                android:lineSpacingExtra="5sp"
                android:text="@string/validation_invalid_password"
                android:textColor="@color/edit_text_color"
                android:textSize="12sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_password"
                tools:visibility="visible" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lato_regular"
                android:lineSpacingExtra="7sp"
                android:text="@string/confirm_password"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@+id/tv_hint_password"/>

            <com.example.iiifa_fan_android.utils.NoChangingBackgroundTextInputLayout
                android:id="@+id/text_input_layout_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:errorTextColor="@color/edit_text_color"
                app:hintEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtConfirmPassword"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/white">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext"
                    android:drawablePadding="20dp"
                    android:fontFamily="@font/lato_medium"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_color"
                    android:textSize="16sp" />

            </com.example.iiifa_fan_android.utils.NoChangingBackgroundTextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_update_password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="60dp"
                android:backgroundTint="@color/colorAccent"
                android:fontFamily="@font/lato_bold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingVertical="10dp"
                android:text="@string/update_password"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:cornerRadius="12dp"
                app:layout_constraintTop_toBottomOf="@+id/text_input_layout_confirm_password" />


            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_update_password"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>