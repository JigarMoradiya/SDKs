<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:id="@+id/relAbacus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cardHint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivReset"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_alignEnd="@+id/rlAbacusMain"
            android:layout_marginEnd="@dimen/_16sdp"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            app:srcCompat="@drawable/box_primory_accent" />

        <RelativeLayout
            android:id="@+id/rlAbacusMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_13sdp"
            android:background="@drawable/bg_abacus_frame_large_half">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rlAbacus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/flAbacusTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/six"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.jigar.me.ui.view.base.abacus.AbacusMasterView
                        android:id="@+id/abacusTop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:beadDrawables="@array/bead_top"
                        app:isBeadStackFromBottom="false"
                        app:noOfBead="1"
                        app:roadDrawable="@drawable/road_blue"
                        app:singleBeadValue="5" />
                </FrameLayout>
                <RelativeLayout
                    android:id="@+id/rlDivider"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@+id/flAbacusTop"
                    app:layout_constraintStart_toStartOf="@+id/flAbacusTop"
                    app:layout_constraintTop_toBottomOf="@+id/flAbacusTop">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivDivider"
                        android:layout_marginStart="@dimen/activity_padding4"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/six"
                        android:background="@color/black2" />

                </RelativeLayout>

                <FrameLayout
                    android:id="@+id/flAbacusBottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/six"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rlDivider">

                    <com.jigar.me.ui.view.base.abacus.AbacusMasterView
                        android:id="@+id/abacusBottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:beadDrawables="@array/big_bottom"
                        app:isBeadStackFromBottom="true"
                        app:noOfBead="4"
                        app:roadDrawable="@drawable/road_blue"
                        app:singleBeadValue="1" />
                </FrameLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivRight"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/sixteen"
                    android:layout_marginEnd="-2dp"
                    app:layout_constraintBottom_toBottomOf="@+id/rlDivider"
                    app:layout_constraintEnd_toEndOf="@+id/rlDivider"
                    app:layout_constraintTop_toTopOf="@+id/rlDivider"
                    app:srcCompat="@drawable/road_dot" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </RelativeLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvCurrentVal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_16sdp"
            android:paddingEnd="@dimen/_16sdp"
            android:layout_alignStart="@+id/rlAbacusMain"
            android:layout_alignTop="@+id/rlAbacusMain"
            android:layout_alignEnd="@+id/rlAbacusMain"
            android:fontFamily="@font/font_extra_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizeMedium" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/resettoContinue"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_16sdp"
            android:layout_alignStart="@+id/rlAbacusMain"
            android:layout_alignEnd="@+id/rlAbacusMain"
            android:layout_alignBottom="@+id/rlAbacusMain"
            android:fontFamily="@font/font_extra_bold"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="@dimen/_1sdp"
            android:singleLine="true"
            android:text="@string/ResettoContinue"
            android:textColor="@color/colorHeadingBlack_00"
            android:textSize="@dimen/_9sdp"
            android:visibility="gone"
            tools:visibility="visible"/>

    </RelativeLayout>


</layout>