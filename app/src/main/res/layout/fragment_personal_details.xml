<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="50dp"
        android:overScrollMode="never"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="32dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/lato_bold"
                android:lineSpacingExtra="13sp"
                android:text="@string/personal_details"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:layout_constraintTop_toTopOf="parent" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/lato_regular"
                android:lineSpacingExtra="7sp"
                android:text="@string/please_enter_your_details"
                android:textColor="@color/text_color"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@+id/txtTitle" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtFName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_68sdp"
                android:fontFamily="@font/lato_regular"
                android:lineSpacingExtra="7sp"
                android:text="@string/first_name"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@+id/txtTitle" />


            <com.example.iiifa_fan_android.utils.NoChangingBackgroundTextInputLayout
                android:id="@+id/text_input_layout_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:hintEnabled="false"
                app:layout_constraintTop_toBottomOf="@+id/txtFName">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext"
                    android:fontFamily="@font/lato_regular"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </com.example.iiifa_fan_android.utils.NoChangingBackgroundTextInputLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtLFName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lato_regular"
                android:lineSpacingExtra="7sp"
                android:text="@string/last_name"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@+id/text_input_layout_first_name" />


            <com.example.iiifa_fan_android.utils.NoChangingBackgroundTextInputLayout
                android:id="@+id/text_input_layout_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:errorTextColor="@color/edit_text_color"
                app:hintEnabled="false"
                app:layout_constraintTop_toBottomOf="@+id/txtLFName">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext"
                    android:fontFamily="@font/lato_medium"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </com.example.iiifa_fan_android.utils.NoChangingBackgroundTextInputLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lato_regular"
                android:lineSpacingExtra="7sp"
                android:text="@string/age"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_input_layout_last_name" />

            <com.example.iiifa_fan_android.utils.NoChangingBackgroundTextInputLayout
                android:id="@+id/text_input_layout_age"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:errorTextColor="@color/edit_text_color"
                app:hintEnabled="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtAge">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext"
                    android:digits="0123456789"
                    android:fontFamily="@font/lato_medium"
                    android:inputType="numberDecimal"
                    android:maxLength="2"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_color"
                    android:textSize="16sp" />

            </com.example.iiifa_fan_android.utils.NoChangingBackgroundTextInputLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lato_regular"
                android:lineSpacingExtra="7sp"
                android:text="@string/gender"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintStart_toEndOf="@+id/text_input_layout_age"
                app:layout_constraintTop_toBottomOf="@+id/text_input_layout_last_name" />

            <com.example.iiifa_fan_android.utils.NoChangingBackgroundTextInputLayout
                android:id="@+id/text_input_layout_Gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:errorTextColor="@color/edit_text_color"
                app:hintEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/txtGender"
                app:layout_constraintTop_toBottomOf="@+id/txtGender">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/spinner_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext"
                    android:clickable="false"
                    android:drawableEnd="@drawable/ic_arrow_down"
                    android:drawableTint="@color/white"
                    android:focusable="false"
                    android:fontFamily="@font/lato_medium"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </com.example.iiifa_fan_android.utils.NoChangingBackgroundTextInputLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lato_regular"
                android:lineSpacingExtra="7sp"
                android:text="@string/mobile_number"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_input_layout_Gender" />

            <com.rilixtech.widget.countrycodepicker.CountryCodePicker
                android:id="@+id/ccp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_edittext"
                android:padding="15dp"
                app:ccp_defaultNameCode="GB"
                app:ccp_enableHint="false"
                app:ccp_enablePhoneAutoFormatter="true"
                app:ccp_hideNameCode="true"
                app:ccp_showFlag="false"
                app:ccp_textColor="@color/white"
                app:ccp_textFont="lato_medium.ttf"
                app:ccp_textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtPhoneNumber" />


            <com.example.iiifa_fan_android.utils.NoChangingBackgroundTextInputLayout
                android:id="@+id/text_input_layout_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:gravity="bottom"
                app:errorTextColor="@color/edit_text_color"
                app:hintEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ccp"
                app:layout_constraintTop_toBottomOf="@+id/txtPhoneNumber">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext"
                    android:fontFamily="@font/lato_medium"
                    android:gravity="start"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_color"
                    android:textSize="16sp" />
            </com.example.iiifa_fan_android.utils.NoChangingBackgroundTextInputLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtReferralCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lato_regular"
                android:lineSpacingExtra="7sp"
                android:text="@string/referral_code_optional"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_input_layout_phone" />


            <com.example.iiifa_fan_android.utils.NoChangingBackgroundTextInputLayout
                android:id="@+id/text_input_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:errorTextColor="@color/edit_text_color"
                app:hintEnabled="false"
                app:layout_constraintTop_toBottomOf="@+id/txtReferralCode">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_last_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext"
                    android:fontFamily="@font/lato_medium"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </com.example.iiifa_fan_android.utils.NoChangingBackgroundTextInputLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:backgroundTint="@color/colorAccent"
                android:fontFamily="@font/lato_bold"
                android:paddingVertical="10dp"
                android:text="@string/create_account"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:cornerRadius="12dp"
                app:layout_constraintTop_toBottomOf="@+id/text_input_code" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ibBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="4dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_arrow_back" />

</RelativeLayout>