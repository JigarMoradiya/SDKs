<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <data>

        <import type="com.jigar.me.utils.AppConstants" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollMenu"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_1sdp"
                    android:elevation="@dimen/card_elevation"
                    app:cardBackgroundColor="@color/light_back"
                    app:cardCornerRadius="@dimen/_16sdp"
                    app:cardMaxElevation="@dimen/card_elevation"
                    app:cardUseCompatPadding="true">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgBack"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:padding="@dimen/activity_padding8"
                        app:srcCompat="@drawable/ic_back" />
                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardResetProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_1sdp"
                    android:elevation="@dimen/card_elevation"
                    app:cardBackgroundColor="@color/light_reset_abacus_progress"
                    app:cardCornerRadius="@dimen/_16sdp"
                    app:cardMaxElevation="@dimen/card_elevation"
                    app:cardUseCompatPadding="true">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:padding="@dimen/activity_padding8"
                        app:srcCompat="@drawable/ic_reset_abacus_progress" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardSettingTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_1sdp"
                    android:elevation="@dimen/card_elevation"
                    app:cardBackgroundColor="@color/light_setting"
                    app:cardCornerRadius="@dimen/_16sdp"
                    app:cardMaxElevation="@dimen/card_elevation"
                    app:cardUseCompatPadding="true">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:padding="@dimen/activity_padding8"
                        app:srcCompat="@drawable/ic_home_setting" />

                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardYoutube"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_1sdp"
                    android:elevation="@dimen/card_elevation"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/light_youtube"
                    app:cardCornerRadius="@dimen/_16sdp"
                    app:cardMaxElevation="@dimen/card_elevation"
                    app:cardUseCompatPadding="true">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:padding="@dimen/activity_padding8"
                        app:srcCompat="@drawable/ic_youtube" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardPurchase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_1sdp"
                    android:elevation="@dimen/card_elevation"
                    app:cardBackgroundColor="@color/light_purchase"
                    app:cardCornerRadius="@dimen/_16sdp"
                    app:cardMaxElevation="@dimen/card_elevation"
                    app:cardUseCompatPadding="true">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:padding="@dimen/activity_padding8"
                        app:srcCompat="@drawable/ic_purchase" />

                </com.google.android.material.card.MaterialCardView>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </ScrollView>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/scrollMenu"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtTitle"
                style="@style/mainTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                tools:text="@string/app_name" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_1sdp"
                android:elevation="@dimen/card_elevation"
                android:visibility="invisible"
                app:cardBackgroundColor="@color/light_math_table"
                app:cardCornerRadius="@dimen/_16sdp"
                app:cardMaxElevation="@dimen/card_elevation"
                app:cardUseCompatPadding="true"
                tools:visibility="visible">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:padding="@dimen/activity_padding8"
                    app:srcCompat="@drawable/ic_math_table" />

            </com.google.android.material.card.MaterialCardView>

            <RelativeLayout
                android:id="@+id/relAbacus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_above="@+id/adView"
                android:visibility="gone"
                tools:visibility="visible">

                <FrameLayout
                    android:id="@+id/flAbacus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true" />


            </RelativeLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/transparent"
                android:visibility="gone"
                tools:visibility="visible" />


            <RelativeLayout
                android:id="@+id/linearQuestions"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/relativeQueNumber"
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="@dimen/_200sdp"
                    android:visibility="gone"
                    tools:visibility="visible">


                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.8"
                        app:srcCompat="@drawable/bg_abacus" />


                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvAnsNumber"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_170sdp"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/font_extra_bold"
                        android:gravity="center"
                        android:shadowColor="@color/colorPrimaryDark"
                        android:shadowRadius="3"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/textSizeAbacusNumber" />

                </RelativeLayout>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_1sdp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardMaxElevation="@dimen/card_elevation"
                    app:cardUseCompatPadding="true"
                    app:strokeColor="@color/blue_300"
                    app:strokeWidth="@dimen/_1sdp"
                    tools:visibility="visible">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txt_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_semibold"
                        android:gravity="center"
                        android:lineSpacingMultiplier="1.2"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/colorHeadingBlack_61"
                        android:textSize="@dimen/_10sdp" />
                </com.google.android.material.card.MaterialCardView>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/cardAbacusQue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardQuestions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_padding4"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_12sdp"
                        app:cardElevation="@dimen/card_elevation"
                        app:cardMaxElevation="@dimen/card_elevation"
                        app:cardUseCompatPadding="true"
                        app:strokeColor="@color/orange_600"
                        app:strokeWidth="@dimen/_6sdp">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="@dimen/_110sdp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/_12sdp"
                            android:paddingBottom="@dimen/_8sdp"
                            android:visibility="visible">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:overScrollMode="never"
                                android:scrollbars="none"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                tools:itemCount="3"
                                tools:listitem="@layout/row_question_layout" />

                            <View
                                android:id="@+id/ivDivider1"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_2sdp"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:background="@color/green_600"
                                android:paddingStart="@dimen/_16sdp"
                                android:paddingEnd="@dimen/_16sdp"
                                android:visibility="visible" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvAns"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/font_extra_bold"
                                android:includeFontPadding="true"
                                android:paddingStart="@dimen/_4sdp"
                                android:paddingEnd="@dimen/_4sdp"
                                android:textColor="@color/cyan_600"
                                android:textSize="@dimen/_20sdp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </com.google.android.material.card.MaterialCardView>
                </androidx.appcompat.widget.LinearLayoutCompat>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relative_table"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@color/transparent"
                android:visibility="gone">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardHint2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_4sdp"
                    app:cardElevation="@dimen/card_elevation4"
                    app:cardMaxElevation="@dimen/card_elevation4"
                    app:cardUseCompatPadding="true"
                    app:strokeWidth="@dimen/_1sdp"
                    app:strokeColor="@color/blue_300">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txt_hint_table"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/font_semibold"
                        android:gravity="center"
                        android:lineSpacingMultiplier="1.2"
                        android:paddingTop="@dimen/activity_padding12"
                        android:paddingBottom="@dimen/activity_padding12"
                        android:textColor="@color/black_text"
                        android:textSize="@dimen/textSizeMedium" />
                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>