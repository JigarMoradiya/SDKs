<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:id="@+id/relAbacus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivReset"
            android:layout_width="@dimen/_6sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_alignEnd="@+id/cardAbacusMain"
            android:layout_marginEnd="@dimen/activity_padding12"
            app:srcCompat="@drawable/box_primory_accent"
            app:tint="@color/black" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAbacusMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_4sdp"
            app:cardMaxElevation="@dimen/_4sdp"
            app:cardUseCompatPadding="false">
        <RelativeLayout
            android:id="@+id/rlAbacusMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_abacus_frame_large_black_exam">

            <RelativeLayout
                android:id="@+id/rlAbacus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical">

                <FrameLayout
                    android:id="@+id/flAbacusTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_2sdp">

                    <com.jigar.me.ui.view.base.abacus.AbacusMasterView
                        android:id="@+id/abacusTop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:beadDrawables="@array/bead_top"
                        app:columnSpacing="@dimen/_24sdp"
                        app:isBeadStackFromBottom="false"
                        app:noOfBead="1"
                        app:roadDrawable="@drawable/road"
                        app:singleBeadValue="5" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/flAbacusBottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlDivider"
                    android:paddingHorizontal="@dimen/_2sdp">

                    <com.jigar.me.ui.view.base.abacus.AbacusMasterView
                        android:id="@+id/abacusBottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:beadDrawables="@array/big_bottom"
                        app:columnSpacing="@dimen/_24sdp"
                        app:isBeadStackFromBottom="true"
                        app:noOfBead="4"
                        app:roadDrawable="@drawable/road"
                        app:singleBeadValue="1" />

                </FrameLayout>

                <RelativeLayout
                    android:id="@+id/rlDivider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/flAbacusTop"
                    android:layout_alignStart="@+id/flAbacusTop"
                    android:layout_alignEnd="@+id/flAbacusTop">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivDivider"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/two"
                        android:background="@color/black2" />

                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvCurrentVal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_8sdp"
            android:layout_alignStart="@+id/cardAbacusMain"
            android:layout_alignTop="@+id/cardAbacusMain"
            android:layout_alignEnd="@+id/cardAbacusMain"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="0"
            android:elevation="@dimen/_10sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_6sdp"
            app:fontFamily="@font/font_extra_bold" />



    </RelativeLayout>

</layout>