<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="#C8E6C9"
                android:centerColor="#81C784"
                android:startColor="#4CAF50" />
            <corners android:radius="@dimen/_8sdp" />
            <padding
                android:bottom="@dimen/_8sdp"
                android:left="@dimen/_8sdp"
                android:right="@dimen/_8sdp"
                android:top="@dimen/_8sdp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
            <corners android:radius="@dimen/_3sdp" />
        </shape>
    </item>
</layer-list>