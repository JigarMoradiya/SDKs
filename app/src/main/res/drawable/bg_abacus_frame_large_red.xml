<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="#FFCDD2"
                android:centerColor="#E57373"
                android:startColor="#F44336" />
            <corners android:radius="@dimen/_16sdp" />
            <padding
                android:bottom="@dimen/_16sdp"
                android:left="@dimen/_16sdp"
                android:right="@dimen/_16sdp"
                android:top="@dimen/_16sdp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
            <corners android:radius="@dimen/_6sdp" />
        </shape>
    </item>
</layer-list>