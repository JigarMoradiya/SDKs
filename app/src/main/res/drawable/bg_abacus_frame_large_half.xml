<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="#FFFFFF"
                android:startColor="#D61943" />
            <corners android:bottomRightRadius="@dimen/_16sdp"
                android:topRightRadius="@dimen/_16sdp"
                />
            <padding
                android:bottom="@dimen/_16sdp"
                android:right="@dimen/_16sdp"
                android:top="@dimen/_16sdp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
            <corners android:bottomRightRadius="@dimen/_6sdp"
                android:topRightRadius="@dimen/_6sdp" />
        </shape>
    </item>
</layer-list>