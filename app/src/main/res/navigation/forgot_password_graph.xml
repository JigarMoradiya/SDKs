<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/forgot_password_graph"
    app:startDestination="@id/forgotFragmentPassword">

    <fragment
        android:id="@+id/forgotFragmentPassword"
        android:name="com.example.iiifa_fan_android.ui.view.forgotpassword.fragments.ForgotPasswordFragment"
        android:label="ForgotFragmentPassword">
        <action
            android:id="@+id/action_forgotFragmentPassword_to_verificationCodeFragment"
            app:destination="@id/verificationCodeFragment" />
    </fragment>
    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="com.example.iiifa_fan_android.ui.view.forgotpassword.fragments.ResetPasswordFragment"
        android:label="ResetPasswordFragment" />
    <fragment
        android:id="@+id/verificationCodeFragment"
        android:name="com.example.iiifa_fan_android.ui.view.registration.fragments.VerificationCodeFragment"
        android:label="VerificationCodeFragment">
        <action
            android:id="@+id/action_verificationCodeFragment_to_resetPasswordFragment"
            app:destination="@id/resetPasswordFragment" />
    </fragment>
</navigation>